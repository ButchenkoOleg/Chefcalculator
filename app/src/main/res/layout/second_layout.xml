<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        android:text="@string/second_title"/>
    <EditText
        android:layout_width="wrap_content"
        android:id="@+id/edit_text_name_prod"
        android:hint="@string/name_prod"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edit_text_weight_pack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/weight_pack"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:id="@+id/edit_text_coast_prod"
        android:hint="@string/coast_pack"
        />
    <EditText
        android:id="@+id/edit_text_weight_prod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/weight_prod_used"
        />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:onClick="addProduct"/>
</LinearLayout>